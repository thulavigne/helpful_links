<% title(@link.title, "Helpful Links") %>
<h2><%= @link.title %></h2>
</br>
<p><b>Description: </b><%= @link.description %></p>
</br>
<p><b>Link: </b><%= @link.link %></p>
</br>
<p>
  <%= link_to "Edit Link", edit_link_path(@link) %> |
<%= link_to "Delete Link",
  link_path(@link),
  :method => :delete,
  :confirm => "Are you sure you want to delete this link?" %> |
<%= link_to "Back To Index", links_path %>
</p>
